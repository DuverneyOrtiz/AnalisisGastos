<div class="row">
	{{#ifCond opcBody.InventB "1"}}
			{{#each Productos}}
		
			    <div class="col s12 m6 l3">
			      <div class="card grey darken-1">
			        <div class="card-content white-text center-align">
			          
			           <p>Imagen</p>
			        </div>
			        <div class="card-action">
			          <p>Existencias: {{Exixtencias}}</p>
			        </div>
			      </div>
			    </div>
			{{/each}}
		
	{{/ifCond}}

	{{#ifCond opcBody.InventB "2"}}
			{{#each Productos}}
		
			    <div class="col s12 m6 l3">
			      <div class="card grey darken-1">
			        <div class="card-content white-text center-align">
			          
			           <p>Imagen</p>
			           <div class="card grey darkey-2">
			           	{{Descripcion}}
			           </div>
			        </div>
			        <div class="card-action">
			          <p>Producto: {{Producto}}</p>
			          <p>Precio Venta: {{precio}}</p>
			          
			        </div>
			      </div>
			    </div>
			{{/each}}
		
	{{/ifCond}}

	{{#ifCond opcBody.InventB "3"}}
		<table class="bordered responsive-table">
			<thead>				
				<th>Nombre</th>
				<th>Apellido</th>
				<th>Dirección 1</th>
				<th>Teléfono</th>				
			</thead>
			<tbody>
				{{#each clientes}}
					<tr>						
						<td>{{Nombre}}</td>
						<td>{{Apellido}}</td>
						<td>{{Direccion}}</td>
						<td>{{Telefono}}</td>										
					</tr>
				{{/each}}
			</tbody>
		</table>		
	{{/ifCond}}

	{{#ifCond opcBody.InventB "4"}}
			{{#each Productos}}
		
			    <div class="col s12 m6 l3">
			      <div class="card grey darken-1">
			        <div class="card-content white-text center-align">
			          
			           <p>Imagen</p>
			           
			        </div>
			        <div class="card-action">
			          <p>Producto: {{Producto}}</p>
			          <p>{{Promocion}}</p>

			         <div class="row">
			         	<div class="col s6 m6 m6">
			         		 <input type="checkbox" id="promotion" class="filled-in"  disabled="disabled">
						  <label for="promotion" class="laberCheck">Autorizar</label>	
			         	</div>

			         	<div class="col s6 m6 m6">
			         		 <input type="checkbox" id="promotion" class="filled-in"  disabled="disabled">
						  <label for="promotion" class="laberCheck">Rechazar</label>	
			         	</div>
			         </div>
			         <p class="center-align">
			         	<a class="btn btn-primary grey darken-3">Aceptar</a>
			         </p>			    
					     

			          
			        </div>
			      </div>
			    </div>
			{{/each}}
		
	{{/ifCond}}
</div>